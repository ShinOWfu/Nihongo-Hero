<div class="modal fade show d-block" id="victoryModal" tabindex="-1" style="background-color: rgba(0,0,0,0.8);">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content victory-modal">
      <div class="modal-body text-center p-5">
        <div class="victory-title mb-4">
          <div class="villagers-container">
          <%= image_tag "villagers/man.png", alt: "man", class: "villager" %>
          <%= image_tag "villagers/oldman.png", alt: "oldman", class: "villager" %>
          <%= image_tag "villagers/woman.png", alt: "woman", class: "villager" %>
          <%= image_tag "villagers/boy.png", alt: "boy", class: "villager" %>
          <%= image_tag "villagers/pig.png", alt: "pig", class: "villager" %>
          <%= image_tag "villagers/cat.png", alt: "cat", class: "villager" %>
          </div>
          <%= image_tag "character-sprites/Samurai/player_character.png", alt: "Player Character", id: "victory-character", class: "victory-player-sprite" %>
        </div>

        <div class="victory-stats mb-4">
          <h2>おめでとう!</h2>
          <p class="lead">マップ 1 :  村を救った</p>

          <div class="stats-grid mt-4">
            <div class="stat-item">
              <div class="stat-value"><%= @total_questions %></div>
              <div class="stat-label">問題</div>
            </div>

            <div class="stat-item">
              <div class="stat-value"><%= @correct_answers %></div>
              <div class="stat-label">正解</div>
            </div>

            <div class="stat-item">
              <div class="stat-value"><%= @accuracy %>%</div>
              <div class="stat-label">正解率</div>
            </div>

            <div class="stat-item">
              <div class="stat-value"><%= @incorrect_answers %></div>
              <div class="stat-label">不正解</div>
            </div>
          </div>
        </div>

        <%= link_to "次のマップ →", map_path, class: "btn btn-victory btn-lg px-5 py-3 fw-bold" %>
      </div>
    </div>
  </div>
</div>
