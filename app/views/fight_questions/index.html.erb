<% content_for :hide_navbar, true %>
<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-5">
      <div class="card shadow-sm">
        <div class="card-body p-4">
          <!-- Victory/Defeat Banner -->
          <div class="bg-light rounded p-4 text-center mb-4">
            <h1 class="display-5 mb-0 text-dark">
              <%= @fight.status == 'completed' ? 'Âãù„Å£„ÅüÔºÅüòä' : 'Ë≤†„Åë„Åü...üòû' %>
            </h1>
          </div>
          <!-- Player Info -->
          <div class="d-flex align-items-center mb-4">
            <div class="rounded-circle bg-secondary d-flex justify-content-center align-items-center text-white" style="width: 50px; height: 50px; min-width: 50px;">
              <span class="fw-bold fs-4"><%= @user.level %></span>
            </div>
            <div class="flex-grow-1 ms-3">
              <div class="fw-bold mb-2"><%= @user.character_name ? @user.character_name : "Nihongo Hero" %></div>
              <div class="position-relative bg-light rounded-pill" style="height: 20px;">
                <% xp_in_current_level = @user.experience_points % 100 %>
                <div class="position-absolute top-0 start-0 h-100 rounded-pill" style="width: <%= xp_in_current_level %>%; background: linear-gradient(to right, #4a4a4a, #8a8a8a);"></div>
                <span class="position-absolute top-50 end-0 translate-middle-y pe-2 small fw-bold">
                  EXP <%= @user.experience_points %> / <%= (@user.level + 1)*100 %>
                </span>
              </div>
              <div class="text-end small text-muted mt-1">
                You gained +<%= @exp_gained %>XP
              </div>
              <div class="text-end small text-muted mt-1">
                <%= "You have leveled up to level #{@user.level}!!!" if @level_up = true%>
              </div>
            </div>
          </div>
          <!-- Stats -->
          <div class="mb-4">
            <div class="d-flex align-items-center justify-content-center mb-2">
              <span class="me-3 fs-4" style="min-width: 50px;">ÂïèÈ°åÊ≠£Ëß£Áéá: <%= @percentage_correct.to_i %>%</span>
            </div>
          </div>
        </div>
        <!-- Question History -->
        <div class="bg-light rounded p-3 mb-4 text-dark">
          <h3 class="h5 mb-3">Ë≥™ÂïèÊ≠¥Âè≤</h3>
          <div class="border-top pt-3">
            <% @fight_questions.each_with_index do |fq, index| %>
              <% question = fq.question %>
              <% is_correct = fq.selected_index == question.correct_index %>
              <div class="mb-2">
                <button class="btn w-100 p-0 text-start border-0" 
                    type="button" 
                    data-bs-toggle="collapse" 
                    data-bs-target="#question-<%= fq.id %>" 
                    aria-expanded="false" 
                    aria-controls="question-<%= fq.id %>">
                  <div class="d-flex align-items-center py-3 <%= 'border-bottom' unless index == @fight_questions.length - 1 %>">
                    <div class="me-3 fs-5 <%= is_correct ? 'text-success' : 'text-danger' %>">
                      <%= is_correct ? '‚úì' : '‚úó' %>
                    </div>
                    <div class="flex-grow-1">
                      <div class="mb-1 text-dark">
                        <%= truncate(question.question, length: 30) %>
                      </div>
                      <div class="small text-dark">Ë≥™Âïè <%= index + 1 %></div>
                    </div>
                    <div>‚ñº</div>
                  </div>
                </button>
                <div class="collapse" id="question-<%= fq.id %>">
                  <div class="card card-body bg-white mt-2">
                    <div class="mb-2">
                      <% question.answers.each_with_index do |answer, answer_index| %>
                        <div class="p-2 mb-2 rounded
                            <%= 'bg-success bg-opacity-25 border border-success' if answer_index == question.correct_index %>
                            <%= 'bg-danger bg-opacity-25 border border-danger' if answer_index == fq.selected_index && answer_index != question.correct_index %>
                            <%= 'bg-light' if answer_index != question.correct_index && answer_index != fq.selected_index %>">
                          <strong><%= answer_index + 1 %>.</strong> <%= answer %>
                          <% if answer_index == fq.selected_index %>
                            <span class="badge bg-danger ms-2">„ÅÇ„Å™„Åü„ÅÆÂõûÁ≠î</span>
                          <% end %>
                          <% if answer_index == question.correct_index %>
                            <span class="badge bg-success ms-2">Ê≠£Ëß£</span>
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <%= link_to map_path, class: 'btn btn-secondary w-100 py-3 fw-bold' do %>
          Á∂ö„Åç
        <% end %>