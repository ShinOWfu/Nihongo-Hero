<% content_for :hide_navbar, true %>

<div class="login-page">
  <div class="login-header mt-5">
    <h2 class="text-dark shadow-dark"><strong>Nihongo Hero</strong></h2>
    <p class="text-dark text-center">Level up your Japanese</p>
  </div>

    <div class="login-modal">
      <h2 class="login-title text-center text-dark pt-5">Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs px-5">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
</div>
